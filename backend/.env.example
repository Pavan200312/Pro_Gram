# .env.example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# Server Configuration
# ============================================
PORT=5000
HOST=localhost
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
# PostgreSQL Connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/united_db

# ============================================
# JWT Configuration
# ============================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-in-production-min-32-characters-required
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-characters-required

# Token expiration times
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CORS Configuration
# ============================================
# Frontend URL (or multiple URLs separated by comma)
CORS_ORIGIN=http://localhost:3000

# ============================================
# API Configuration
# ============================================
API_VERSION=v1

# ============================================
# Email Configuration (TODO)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@unitedplatform.com

# ============================================
# AWS Configuration (for file uploads - TODO)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=united-platform-bucket

# ============================================
# Logging Configuration (TODO)
# ============================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ============================================
# Redis Configuration (TODO - for caching/sessions)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Environment Variables Notes
# ============================================
# NODE_ENV: development | staging | production
# JWT_EXPIRES_IN: Examples: 15m, 1h, 24h, 7d
# LOG_LEVEL: error | warn | info | debug | trace
